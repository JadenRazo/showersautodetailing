# Application
NODE_ENV=development
APP_URL=http://localhost:4321
API_URL=http://localhost:3000
PORT=3000

# Security & Authentication
# Generate a secure random string: openssl rand -hex 32
JWT_SECRET=your_secure_random_string_at_least_32_characters
# Frontend URL for CORS
CORS_ORIGIN=http://localhost:4321
# BCrypt rounds for password hashing (12 recommended)
BCRYPT_ROUNDS=12

# Database
DATABASE_URL=postgresql://detailing_user:detailing_pass@postgres:5432/detailing_db

# Square Payment Processing
SQUARE_APPLICATION_ID=sandbox-sq0idb-xxxxxxxxxxxxxxxxxxxx
SQUARE_ACCESS_TOKEN=EAAAxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SQUARE_LOCATION_ID=LXXXXXXXXXXXXXXXXXX
SQUARE_WEBHOOK_SIGNATURE_KEY=your_webhook_signature_key_here
SQUARE_ENVIRONMENT=sandbox
# Deposit percentage (e.g., 0.25 for 25%)
DEPOSIT_PERCENTAGE=0.25

# Notifications
# Set notification preferences: email, sms, or both
NOTIFICATION_METHOD=both

# Brevo (Email) - https://brevo.com
# Free tier: 300 emails/day
BREVO_API_KEY=your_brevo_api_key_here
NOTIFICATION_EMAIL_FROM=noreply@yourdetailing.com
NOTIFICATION_EMAIL_TO=owner@yourdetailing.com

# Telnyx (SMS) - https://telnyx.com
# ~$0.0025 per SMS (US)
TELNYX_API_KEY=your_telnyx_api_key_here
TELNYX_PHONE_NUMBER=+1234567890
NOTIFICATION_SMS_TO=+1234567890

# Google Maps
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Service Area Configuration
# Latitude and longitude for map center
SERVICE_AREA_LAT=40.7128
SERVICE_AREA_LNG=-74.0060
# Radius in miles
SERVICE_AREA_RADIUS=25

# Business Information (editable via admin dashboard)
BUSINESS_NAME=Showers Auto Detailing
BUSINESS_PHONE=+1234567890
BUSINESS_EMAIL=contact@yourdetailing.com
